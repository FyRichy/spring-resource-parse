<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.richy.tx.xml.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.richy.tx.xml.model.User">
        <id column="ID" property="id" jdbcType="NUMERIC" />
    	<result column="NAME" property="name" jdbcType="VARCHAR" />
    	<result column="AGE" property="age" jdbcType="NUMERIC" />
    	<result column="SEX" property="sex" jdbcType="VARCHAR" />
    </resultMap>

	<select id="getById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		SELECT ID,NAME,AGE,SEX FROM t_user WHERE ID = #{id}
	</select>
</mapper>
